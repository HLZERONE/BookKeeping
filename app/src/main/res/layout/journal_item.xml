<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/yellowBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/journalIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"
        tools:srcCompat="@drawable/food_and_drinks_2"
         />

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/journalIcon"
        app:layout_constraintBottom_toBottomOf="@+id/journalIcon"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:fontFamily="@font/jaldi"
        android:textSize="17dp"
        tools:text="Food and Drinks" />

    <TextView
        android:id="@+id/journalComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/categoryName"
        app:layout_constraintStart_toEndOf="@+id/journalIcon"
        app:layout_constraintBottom_toBottomOf="@id/journalIcon"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/jaldi"
        android:textSize="14dp"
        tools:text="McDonals" />

    <TextView
        android:id="@+id/journalDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/jaldi"
        android:textSize="15dp"
        tools:text="Sep 19 - 2022" />

    <TextView
        android:id="@+id/journalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/journalDate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/jaldi"
        android:textSize="25dp"
        tools:text="12.23" />
</androidx.constraintlayout.widget.ConstraintLayout>